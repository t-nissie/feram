srcdir = @srcdir@
VPATH = @srcdir@
SOURCEFORGE_FERAM=t-nissie@shell.sourceforge.net:/home/groups/l/lo/loto/htdocs/feram

feram-presentation.xhtml: feram-presentation.txt
	ruby -I $(srcdir)/.. $< $< > $@

sourceforge: favicon.ico feram-presentation.css feram-presentation.txt feram-presentation.xhtml figures
