srcdir = @srcdir@
VPATH = @srcdir@
SOURCEFORGE_FERAM=web.sourceforge.net:/home/groups/l/lo/loto/htdocs/feram

all: feram-presentation.xhtml film.xhtml

%.xhtml: %.txt
	ruby $< $< > $@

sf: sourceforge
sourceforge: favicon.ico feram-presentation.css feram-presentation.txt feram-presentation.xhtml film.txt film.xhtml slidy.js
	scp    $^      $(SOURCEFORGE_FERAM)/doc/
	scp -r figures $(SOURCEFORGE_FERAM)/doc/

.PRECIOUS: Makefile
Makefile: $(srcdir)/Makefile.in
	cd .. && ./config.status doc/$@

clean:
	rm -rf *.aux *.bbl *.blg *.dvi *.log *.ps *.pdf config.log
