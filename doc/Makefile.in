srcdir = @srcdir@
VPATH = @srcdir@
SOURCEFORGE_FERAM=t-nissie@shell.sourceforge.net:/home/groups/l/lo/loto/htdocs/feram

all: feram-presentation.xhtml film.xhtml

%.xhtml: %.txt
	ruby -I $(srcdir)/.. $< $< > $@

sf: sourceforge
sourceforge: favicon.ico feram-presentation.css feram-presentation.txt feram-presentation.xhtml film.xhtml slidy.js
	scp    $^            $(SOURCEFORGE_FERAM)/doc/
	scp -r figures/*.jpg $(SOURCEFORGE_FERAM)/doc/figures/
	scp -r figures/*.gif $(SOURCEFORGE_FERAM)/doc/figures/

.PRECIOUS: Makefile
Makefile: $(srcdir)/Makefile.in
	cd .. && ./config.status doc/$@

clean:
	rm -rf *.aux *.bbl *.blg *.dvi *.log *.ps *.pdf config.log
