# -*-Makefile-*- for feram_fftw_SoA
##
FC=gfortran
FFLAGS=-Wall -g -O3 -fopenmp -ffree-form -ffree-line-length-none
CPPFLAGS=-I/usr/local/include
LDFLAGS=-lfftw3 -lfftw3_omp

feram_fftw_SoA: feram_fftw_SoA.o feram_fftw_SoA_in.o feram_fftw_SoA_out.o feram_fftw_wisdom_timing.o
	$(FC) $(FFLAGS) -o $@ $^ $(LDFLAGS)
clean:
	rm -f core* feram_fftw_SoA feram_fftw_SoA*.o feram_fftw_wisdom_timing.o
