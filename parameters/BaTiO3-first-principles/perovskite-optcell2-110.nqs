#!/bin/sh
mpdtrace || mpdboot
mpirun -np 4 ./abinip-xyz < perovskite-optcell2-110.files > perovskite-optcell2-110.log

echo 'u_x=,u_y=,u_z=   0.00000000   0.00000000   0.00000000' > perovskite-optcell2-110.tmp
grep 'u_z=' perovskite-optcell2-110.out >>  perovskite-optcell2-110.tmp
grep -h 'etotal' perovskite-a0.out perovskite-optcell2-110.out | paste perovskite-optcell2-110.tmp - > perovskite-optcell2-110.tmp2
(for f in perovskite-a0.out perovskite-optcell2-110.out; do  sed -n '/after computation/,$p' $f | grep acell ; done) | paste perovskite-optcell2-110.tmp2 - > perovskite-optcell2-110.tmp3
(echo '     rprim0   1.0 0.0 0.0' ; sed -n '/after computation/,$p' perovskite-optcell2-110.out | grep rprim) | paste perovskite-optcell2-110.tmp3 - > perovskite-optcell2-110.dat
